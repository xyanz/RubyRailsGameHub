////////////////// HORIZONTAL SCROLLING///////////////////////////
.horizontal-scroll-wrapper {
  position: absolute;
  display: block;
  top: 0;
  left: -400px;
  // width = height
  width: calc(650px + 1px);
  // height = width
  max-height: 2050px;
  margin: 0;
  margin-top: 50px;
  overflow-y: auto;
  overflow-x: hidden;
  transform: rotate(-90deg);
  transform-origin: right top;
  transform:rotate(-90deg) translateY(-250px);
  border: 1px solid black;
}
.horizontal-scroll-wrapper > div {
  border: 1px dotted white;
  background-color: blue;
  display: block;
  transform: rotate(90deg);
  transform-origin: right top;
}
.squares {
  padding: 650px 0 0 0;
}
.squares > div {
  width: 650px;
  height: 650px;
