<% provide(:title, "Home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="post_form">
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Post Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="home-container">
    <div class="welcome-logo"><h1>Welcome to GameHub</h1></div><br />
    <h3><%= link_to "Explore a platform", platforms_path %></h3>
    <%= link_to "Sign Up", signup_path , class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
